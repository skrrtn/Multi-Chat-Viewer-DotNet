<Window x:Class="TwitchChatViewer.DatabaseMigrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Migration Tool" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30" Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Database Migration Tool" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="This tool helps migrate legacy databases to support the new multi-platform features." 
                       TextWrapping="Wrap" Margin="0,5,0,0" Foreground="#FFCCCCCC"/>
        </StackPanel>

        <!-- Database List -->
        <DataGrid Grid.Row="1" Name="DatabaseGrid" AutoGenerateColumns="False" 
                  Background="#FF3F3F46" Foreground="White" 
                  BorderBrush="#FF4F4F4F" BorderThickness="1"
                  GridLinesVisibility="None"
                  RowBackground="#FF3F3F46" 
                  AlternatingRowBackground="#FF4A4A4A"
                  RowHeight="28" HeadersVisibility="Column">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF2D2D30"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="BorderBrush" Value="#FF4F4F4F"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Channel" Binding="{Binding ChannelName}" Width="*"/>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" Width="100"/>
                <DataGridTextColumn Header="Messages" Binding="{Binding MessageCount}" Width="100"/>
                <DataGridTextColumn Header="Size" Binding="{Binding FileSizeFormatted}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status -->
        <Border Grid.Row="2" Margin="0,10,0,0" Padding="10,8" 
                Background="#FF3C3C3C" BorderBrush="#FF4F4F4F" BorderThickness="1"
                CornerRadius="3">
            <TextBlock Name="StatusText" 
                       Text="Click 'Scan Databases' to check for migration needs."
                       Foreground="#FFCCCCCC" FontWeight="Medium"
                       TextWrapping="Wrap" VerticalAlignment="Center"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="ScanButton" Content="Scan Databases" Click="ScanButton_Click" 
                    Width="140" Height="35" Margin="0,0,10,0" Padding="10,5"
                    Background="#FF0E639C" Foreground="White" BorderBrush="#FF0E639C"
                    FontWeight="Medium" FontSize="12"/>
            <Button Name="MigrateButton" Content="Migrate All" Click="MigrateButton_Click" 
                    Width="140" Height="35" Margin="0,0,10,0" Padding="10,5"
                    Background="#FF238636" Foreground="White" BorderBrush="#FF238636"
                    FontWeight="Medium" FontSize="12"
                    IsEnabled="False"/>
            <Button Name="CloseButton" Content="Close" Click="CloseButton_Click" 
                    Width="100" Height="35" Padding="10,5"
                    Background="#FF6E6E6E" Foreground="White" BorderBrush="#FF6E6E6E"
                    FontWeight="Medium" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
