<Window x:Class="TwitchChatViewer.KickCredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kick Credentials" 
        Height="350" 
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e"
        Foreground="White"
        Icon="logo.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Kick Credentials Required" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="To connect to Kick channels, please provide your Kick account credentials." 
                       FontSize="12" 
                       Foreground="#cccccc" 
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Client ID:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Foreground="White" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="ClientIdTextBox" 
                     Height="30" 
                     FontSize="12"
                     Background="#2d2d30"
                     Foreground="White"
                     BorderBrush="#3c3c3c"
                     BorderThickness="1"
                     Padding="8,6"
                     Margin="0,0,0,15"/>
            
            <TextBlock Text="Client Secret:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Foreground="White" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="ClientSecretPasswordBox" 
                         Height="30" 
                         FontSize="12"
                         Background="#2d2d30"
                         Foreground="White"
                         BorderBrush="#3c3c3c"
                         BorderThickness="1"
                         Padding="8,6"
                         Margin="0,0,0,15"/>
            
            <TextBlock Text="ℹ️ How to get credentials:" 
                       FontSize="12" 
                       FontWeight="SemiBold" 
                       Foreground="#4fc3f7" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="1. Go to https://kick.com/settings/developer" 
                       FontSize="11" 
                       Foreground="#cccccc" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,2"/>
            <TextBlock Text="2. Create a new application" 
                       FontSize="11" 
                       Foreground="#cccccc" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,2"/>
            <TextBlock Text="3. Copy the Client ID and Client Secret from your application" 
                       FontSize="11" 
                       Foreground="#cccccc" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="⚠️ Security Notice" 
                       FontSize="12" 
                       FontWeight="SemiBold" 
                       Foreground="#ffcc00" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Your credentials will be encrypted and stored locally. They are only used to connect to Kick's chat service and are never shared with third parties." 
                       FontSize="11" 
                       Foreground="#cccccc" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#555"
                    Foreground="White"
                    BorderBrush="#777"
                    BorderThickness="1"
                    Click="CancelButton_Click"/>
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"
                    BorderBrush="#005a9e"
                    BorderThickness="1"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
